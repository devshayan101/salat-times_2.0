{
  "expo": {
    "name": "SalatTimes",
    "slug": "salattimes",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "salattimes",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1F2937"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shayandev.salattimes"
    },
    "android": {
      "package": "com.shayandev.salattimes",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1F2937"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow SalatTimes to use your location for accurate prayer times.",
          "locationAlwaysPermission": "Allow SalatTimes to use your location for accurate prayer times.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#10B981"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "580e5ef9-0826-4e2a-a631-aeea5674c124"
      }
    },
    "notification": {
      "icon": "./assets/images/icon.png",
      "color": "#10B981",
      "sounds": [
        {
          "name": "default_beep",
          "file": "./assets/sounds/beep.mp3"
        },
        {
          "name": "fajr",
          "file": "./assets/sounds/fajr.mp3"
        },
        {
          "name": "dhuhr",
          "file": "./assets/sounds/dhuhr.mp3"
        },
        {
          "name": "asr",
          "file": "./assets/sounds/asr.mp3"
        },
        {
          "name": "maghrib",
          "file": "./assets/sounds/maghrib.mp3"
        },
        {
          "name": "isha",
          "file": "./assets/sounds/isha.mp3"
        }
      ]
    }
  }
}
