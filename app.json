{
  "expo": {
    "name": "SalatTimes",
    "slug": "salattimes",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "salattimes",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#FAFAFA"
    },
    "updates": {
      "url": "https://u.expo.dev/580e5ef9-0826-4e2a-a631-aeea5674c124",
      "fallbackToCacheTimeout": 0,
      "checkAutomatically": "ON_LOAD"
    },
    "assetBundlePatterns": [
      "assets/images/*",
      "assets/sounds/*",
      "assets/fonts/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shayandev.salattimes"
    },
    "android": {
      "package": "com.shayandev.salattimes",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1F2937"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "enableProguardInReleaseBuilds": true,
      "enableShrinkResources": true,
      "config": {
        "googleMaps": {
          "useWebKit": true
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "transformer": "babel"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow SalatTimes to use your location for accurate prayer times.",
          "locationAlwaysPermission": "Allow SalatTimes to use your location for accurate prayer times.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#10B981"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "580e5ef9-0826-4e2a-a631-aeea5674c124"
      }
    },
    "notification": {
      "icon": "./assets/images/icon.png",
      "color": "#10B981",
      "sounds": [
        {
          "name": "default_beep",
          "file": "./assets/sounds/beep.mp3"
        }
      ]
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "jsEngine": "jsc"
  }
}
